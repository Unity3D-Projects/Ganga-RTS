.loading {
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	position: absolute;
	text-align: center;
	background: black;
}
.loading > .loadingBlock {
	display: inline-block;
	position: relative;
	top: 40%;
	height: 60px;
	width: 240px;
	padding: 20px;
	background-size: 100%;
}
.loadingBlock > .titleLoading {
	font-weight: bold;
	text-align: center;
    font-size: 14pt;
	width: 100%;
}
.loadingBlock > .descriptionLoading {
	padding-top: 10px;
    font-size: 10pt;
	width: 100%;
}